# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        /var/lib/backuppc/log/msmtp.log

# Gmail example
account        gmail
host           smtp.gmail.com
port           587
from           username@gmail.com
user           username
password       usernamepassword  # 2step -> use appication specific password

# Set a default account
account default : gmail
